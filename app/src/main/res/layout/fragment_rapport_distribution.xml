<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ededed"
    android:padding="16dp"
    tools:context=".ui.RapportFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rapport de distribution"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mild_attendu_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mild attendu : 10"
                android:textColor="#000000"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/mild_recu_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MILD recu : 8"
                android:textColor="#000000"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/mild_servi_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MILD servi : 5"
                android:textColor="#000000"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/solde_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solde : 3"
                android:textColor="#000000"
                android:textSize="24sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>